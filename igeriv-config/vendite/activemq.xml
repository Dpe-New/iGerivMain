<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:amq="http://activemq.apache.org/schema/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd
  http://activemq.apache.org/camel/schema/spring http://activemq.apache.org/camel/schema/spring/camel-spring.xsd">

  	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    	<property name="locations">
        	<value>file:C:/igeriv/vendite/credentials-enc.properties</value>
      	</property>      
  	</bean>     
  
    <broker xmlns="http://activemq.apache.org/schema/core" brokerName="localbroker" dataDirectory="C:/igeriv/vendite" useJmx="false">    	     		    	 	    	
    	
		<plugins> 
			<simpleAuthenticationPlugin anonymousAccessAllowed="false">
			    <users>
			        <authenticationUser username="${activemq.username}" password="${activemq.password}" groups="users,admins"/>	       
			    </users>
			</simpleAuthenticationPlugin>
			
			<authorizationPlugin>
		        <map>
		          <authorizationMap>
		            <authorizationEntries>
		              <authorizationEntry queue=">" read="admins" write="admins" admin="admins" />
		              <authorizationEntry topic="ActiveMQ.Advisory.>" read="guests,users" write="guests,users" admin="guests,users"/>	              
		            </authorizationEntries>	            	                          
		          </authorizationMap>
		        </map>
		      </authorizationPlugin>		     	             	            	            	      
		</plugins> 
		
	    <!-- Destination specific policies using destination names or wildcards -->
	    <destinationPolicy>
	        <policyMap>
	            <policyEntries>
	                <policyEntry queue=">" producerFlowControl="true" memoryLimit="20mb">
	                    <deadLetterStrategy>
	                      <individualDeadLetterStrategy queuePrefix="DLQ." useQueueForQueueMessages="true" />
	                    </deadLetterStrategy>
	                </policyEntry>
	                <policyEntry topic=">" producerFlowControl="true" memoryLimit="20mb">
	                </policyEntry>
	            </policyEntries>
	        </policyMap>
	    </destinationPolicy>
	             

	    <networkConnectors>        	            
	        <networkConnector uri="static://(http://161.27.245.150:8449)" 	duplex="false" userName="${activemq.username}" password="${activemq.password}"/>
			<networkConnector uri="static://(nio://0.0.0.0:61619)" 			duplex="false" userName="${activemq.username}" password="${activemq.password}"/>				
	    </networkConnectors>        
		
	    <persistenceAdapter>
	        <kahaDB directory="C:/igeriv/vendite/localbroker/kahadb" />
	    </persistenceAdapter>
	
	    <!--  The maximum amount of space the broker will use before slowing down producers -->
	    <systemUsage>
	        <systemUsage>
	            <memoryUsage>
	                <memoryUsage limit="200 mb"/>
	            </memoryUsage>
	            <storeUsage>
	                <storeUsage limit="2 gb" name="foo"/>
	            </storeUsage>
	            <tempUsage>
	                <tempUsage limit="100 mb"/>
	            </tempUsage>
	        </systemUsage>
	    </systemUsage>
	
	    <!-- The transport connectors ActiveMQ will listen to -->
	    <transportConnectors>
	        <transportConnector name="nio" uri="nio://0.0.0.0:61619?maximumConnections=1000&amp;wireFormat.maxFrameSize=419430400" />
	    </transportConnectors>	        	    	
	
	</broker>        
    
</beans>
