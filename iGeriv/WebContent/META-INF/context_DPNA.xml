<?xml version="1.0" encoding="UTF-8"?>

<Context path="/igeriv" docBase="igeriv" debug="5" crossContext="false"
	reloadable="true" antiJARLocking="true">

	<!-- JavaMail session factory -->
	<!-- Cancellare per deploy in produzione -->
	<Resource name="mail/Session" auth="Container" type="javax.mail.Session"
		mail.debug="false" mail.user="rodis" mail.password="rodis"
		mail.transport.protocol="smtp" mail.smtp.host="172.16.5.1"
		mail.smtp.auth="true" mail.smtp.port="25" mail.smtp.starttls.enable="false" />

	<!-- Javamelody Monitor -->
	<Parameter name='javamelody.disabled' value='true'
		override='false' />
	<Parameter name='javamelody.system-actions-enabled' value='false'
		override='false' />
	<Parameter name='javamelody.admin-emails' value='dpe.tecnico@dpe.it'
		override='false' />
	<Parameter name='javamelody.mail-session' value='mail/Session'
		override='false' />
	<Parameter name='javamelody.mail-periods' value='week'
		override='false' />

	<ResourceLink global="jms/ConnectionFactory" name="jms/ConnectionFactory"
		type="javax.jms.ConnectionFactory" />
	<ResourceLink global="jms/SpostamentoEdicoleReceiverConnectionFactory"
		name="jms/SpostamentoEdicoleReceiverConnectionFactory" type="javax.jms.ConnectionFactory" />
	<ResourceLink global="jms/Queue" name="jms/Queue" type="javax.jms.Queue" />
	<ResourceLink global="jms/ReplyQueue" name="jms/ReplyQueue"
		type="javax.jms.Queue" />
	<ResourceLink global="jms/SpostamentoQueue" name="jms/SpostamentoQueue"
		type="javax.jms.Queue" />
	<ResourceLink global="jms/SpostamentoReplyQueue" name="jms/SpostamentoReplyQueue"
		type="javax.jms.Queue" />

</Context>